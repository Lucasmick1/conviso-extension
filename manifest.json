{
  "name": "Conviso Platform Shortcuts",
  "description": "Easily navigate key platform features",
  "version": "0.0.1",
  "manifest_version": 3,

  "action": {
    "default_icon": "favicon.png",
    "default_popup": "index.html"
  },

  "permissions":[
    "tabs"
  ],

  "content_scripts": [
    "js": ["script.js"],
    "css": ["style.css"]
  ],

  "host_permissions":[
    "<all_urls>"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'"",

  "autor": "Conviso"

}
